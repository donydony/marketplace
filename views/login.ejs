<!--
****************************************************************************
  JS SCRIPTS
******************************************************************************-->
  <!-- SCRIPT FOR ERROR POPUP -->
  <script src="/vendor/jquery-3.0.0.js"></script>
  <script defer src="/scripts/app.js"></script>
  <script defer src="/scripts/loginError.js"></script>
  <!-- Bootstrap -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>


  </head>
<body>
  <!-- <header>
    <%- include('./partials/_header.ejs'); %>
  </header> -->

  <main>

    <section class="login-section">
      <h2 class="login-heading">The Market Place</h2>
      <% if(user) {%>
        <h5>Welcome</h5>
        <p>themarkteplace@gmail.com <span><a href="/login">Change</a></span> </p>
      <% } else { %>
        <p>Sign in to The Market Place or <span><a href="/register">create an account</a></span> </p>
      <% } %>
      <label class="error" id="error" ><i class="fa-solid fa-triangle-exclamation" ><span> </span></i> </label>

      <form method="post" action="/login" class="login-form" id="login-form">
        <div class="email-input">

          <% if (user)  {%>
          <input
                id="password-input"
                class=""
                type="password"
                name="password"
                placeholder="Password"
                required=true
                style="margin-bottom: 1em"
          />

          <% } else { %>


            <input
                  id="user-name-input"
                  class=""
                  type="text"
                  name="uname"
                  placeholder="   Enter your email or username"
                  required=true
                  style="margin-bottom: 1em"
            />

          <% } %>
          <button class="login-continue" type="submit">Continue</button>
        </div>
      </form>
      <footer>
        <select>
          <option value="0">English (Canada):</option>
          <option value="1">Audi</option>
          <option value="2">BMW</option>
          <option value="3">Citroen</option>
          <option value="4">Ford</option>
          <option value="5">Honda</option>
          <option value="6">Jaguar</option>
          <option value="7">Land Rover</option>
          <option value="8">Mercedes</option>
          <option value="9">Mini</option>
          <option value="10">Nissan</option>
          <option value="11">Toyota</option>
          <option value="12">Volvo</option>
        </select>
        <div>
          <a href="">Help</a>
          <a href="">Privacy</a>
          <a href="">Terms</a>
        </div>

      </footer>

    </section>

  </main>

</body>
</html>
